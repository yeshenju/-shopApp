/* pages/collect/collect.wxss */
.commonTitle {
    height: 104rpx;
    line-height: 104rpx;
    background-color: #fff;
    font-size: 32rpx;
    border-bottom: 1px solid #bfbfbf;
    text-indent: 1em;
}

.collectlist {
    display: flex;
    padding: 20rpx 0px;
    background-color: #fff;
    margin-bottom: 2rpx;
}

.collectlist .left {
    width: 240rpx;
    text-align: center;
}

.collectlist .right {
    /* 剩下宽度分配给右侧 */
    flex: 1;
    height: 200rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}

.collectlist .left image {
    width: 200rpx;
    height: 200rpx;
}

.collectlist .right image {
    width: 44rpx;
    height: 44rpx;
}

.collectlist .right .goods_name {
    font-size: 34rpx;
    color: #808080;
    height: 100rpx;
    overflow: hidden;
}

.collectlist .right .goods_price {
    position: absolute;
    left: 0px;
    bottom: 0px;
    font-size: 30rpx;
    color: #FF1493;
}

.collectlist .right .car {
    position: absolute;
    right: 0px;
    bottom: 0px;
}