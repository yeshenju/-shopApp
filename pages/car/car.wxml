<!--pages/car/car.wxml-->

<view class="goodslist" wx:for="{{goodsList}}" wx:key="*this">
    <view class="left">
        <image src="{{item.goodsImage}}"></image>
    </view>
    <view class="right">
        <view class="goods_name">
            <text>{{item.goodsName}}</text>
        </view>
        <view class="goods_price">
            <text>￥{{item.goodsPrice}}</text>
        </view>
        <view class="carBtn">
            <view class="btn" bindtap="reduce" data-id="{{index}}">-</view>
            <text class="num">{{item.num}}</text>
            <view class="btn" bindtap="add" data-id="{{index}}">+</view>
        </view>
        <view class="car" catchtap="del" data-id="{{index}}">
            <image src="/images/shanchu.png"></image>
        </view>
    </view>
</view>


<!-- 底部导航 -->
<view class="bottomNav" wx:if="{{goodsList.length}}">
    <view class="warp">
        总价格：<text>￥{{totalData}}</text>
        <view class="order" bindtap="goPay">下单</view>
    </view>
</view>


<!-- 购物车为空提示 -->
<view class="goodsNull" wx:if="{{!goodsList.length}}">
    <view class="iconfont icon-gouwuchekong"></view>
    <view class="text">购物车为空，<text bindtap="goHome" style="color: #00b26a;">去逛逛</text></view>
</view>

<view class="common" wx:if="{{!goodsList.length}}">
    <text>推荐列表</text>
</view>
<view class="goodslist" wx:for="{{ tjgoodsList}}" wx:key="*this" wx:if="{{!goodsList.length}}">
    <view class="left">
        <image src="{{item.goodsImage}}"></image>
    </view>
    <navigator class="right" url="/pages/details/details?id={{item.id}}" hover-class="none">
        <view>
            <view class="goods_name" style="margin-top: 10px;height: 100%">
                <text>{{item.goodsName}}</text>
            </view>
        </view>
    </navigator>
</view>